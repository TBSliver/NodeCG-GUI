{
  "name": "nodecg-gui",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "formik": "^2.2.0",
    "formik-material-ui": "^3.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "source-map-support": "^0.5.16",
    "urijs": "^1.19.2",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@types/node": "^14.14.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/urijs": "^1.19.13",
    "@types/yup": "^0.29.8",
    "electron": "10.1.4",
    "electron-builder": "^22.9.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "typescript": "^3.9.4",
    "webpack": "^4.44.2"
  },
  "build": {
    "productName": "NodeCG GUI",
    "extraFiles": [
      "vendor/nodecg",
      "static"
    ],
    "nsis": {
      "oneClick": false
    },
    "win": {
      "publish": "github"
    }
  },
  "electronWebpack": {
    "whiteListedModules": [
      "react",
      "react-dom",
      "@material-ui/core",
      "react-router-dom",
      "@monaco-editor/react",
      "formik",
      "formik-material-ui",
      "yup"
    ]
  }
}
